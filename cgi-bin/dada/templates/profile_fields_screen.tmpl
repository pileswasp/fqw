	            </form> 
	
	
				<!-- tmpl_if can_move_columns --> 
					<form style="margin: 0pt; display: inline;" accept-charset="<!-- tmpl_var HTML_CHARSET -->">			
						<input type="hidden" name="f" value="profile_fields" /> 
		             	<input type="hidden" name="process" value="edit_field_order" /> 
